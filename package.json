{
  "name": "project-notification-server",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "ci": "pnpm i --frozen-lockfile",
    "clean": "rimraf dist",
    "start:admin": "nest start admin",
    "start:admin:dev": "dotenv -e ./env/admin.env -- nest start admin --watch",
    "start:admin:debug": "dotenv -e ./env/admin.env -- nest start admin --debug --watch",
    "start:admin:prod": "!node dist/apps/admin/main # 로컬에서 사용 금지",
    "start:admin:build": "nest build admin",
    "start:user": "nest start user",
    "start:user:dev": "dotenv -e ./env/user.env -- nest start user --watch",
    "start:user:debug": "dotenv -e ./env/user.env -- nest start user --debug --watch",
    "start:user:prod": "!node dist/apps/user/main # 로컬에서 사용 금지",
    "start:user:build": "nest build user",
    "start:noti": "nest start notification",
    "start:noti:dev": "dotenv -e ./env/notification.env -- nest start notification --watch",
    "start:noti:debug": "dotenv -e ./env/notification.env -- nest start notification --debug --watch",
    "start:noti:prod": "!node dist/apps/noti/main # 로컬에서 사용 금지",
    "start:noti:build": "nest build notification",
    "format": "prettier --write \"apps/**/*.ts\" \"libs/**/*.ts\"",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./apps/project-notification-server/test/jest-e2e.json"
  },
  "dependencies": {
    "@aws-sdk/client-sqs": "^3.379.1",
    "@nestjs/axios": "^2.0.0",
    "@nestjs/common": "^9.0.0",
    "@nestjs/config": "^2.3.1",
    "@nestjs/core": "^9.0.0",
    "@nestjs/jwt": "^10.0.2",
    "@nestjs/platform-express": "^9.0.0",
    "@nestjs/swagger": "^6.2.1",
    "@nestjs/typeorm": "^10.0.0",
    "@sentry/node": "^7.39.0",
    "@slack/client": "^5.0.2",
    "argon2": "^0.30.3",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.0",
    "date-fns": "^2.29.3",
    "helmet": "^6.0.1",
    "morgan": "^1.10.0",
    "nest-raven": "^9.1.0",
    "nest-winston": "^1.8.0",
    "passport-jwt": "^4.0.1",
    "pg": "^8.11.1",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^7.2.0",
    "typeorm": "^0.3.17",
    "winston": "^3.8.2",
    "winston-daily-rotate-file": "^4.7.1"
  },
  "devDependencies": {
    "@nestjs/cli": "^9.0.0",
    "@nestjs/schematics": "^9.0.0",
    "@nestjs/testing": "^9.0.0",
    "@types/express": "^4.17.13",
    "@types/jest": "29.2.4",
    "@types/morgan": "^1.9.4",
    "@types/node": "18.11.18",
    "@types/pg": "^8.10.2",
    "@types/supertest": "^2.0.11",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "dotenv-cli": "^7.0.0",
    "eslint": "^8.0.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "jest": "29.3.1",
    "prettier": "^2.3.2",
    "source-map-support": "^0.5.20",
    "supertest": "^6.1.3",
    "swagger-typescript-api": "^12.0.4",
    "ts-jest": "29.0.3",
    "ts-loader": "^9.2.3",
    "ts-node": "^10.0.0",
    "tsconfig-paths": "4.1.1",
    "typescript": "^5.0.4"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": ".",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "./coverage",
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/apps/",
      "<rootDir>/libs/"
    ],
    "moduleNameMapper": {
      "^@app/admin(|/.*)$": "<rootDir>/apps/admin/src/$1",
      "^@app/user(|/.*)$": "<rootDir>/apps/user/src/$1",
      "^@app/notification(|/.*)$": "<rootDir>/apps/notification/src/$1",
      "^@app/common(|/.*)$": "<rootDir>/libs/common/src/$1",
      "^@app/config(|/.*)$": "<rootDir>/libs/config/src/$1",
      "^@app/custom(|/.*)$": "<rootDir>/libs/custom/src/$1",
      "^@app/entity(|/.*)$": "<rootDir>/libs/entity/src/$1"
    }
  }
}